<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:contentDescription=""
        android:scaleType="fitStart"
        android:src="@drawable/kai"
        android:layout_above="@+id/button" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/but_student_in"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/but_background_color"
        android:onClick="onClick_Student" android:textColor="@color/but_text_color"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/but_prepod_in"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="@color/but_background_color"
        android:textColor="@color/but_text_color"
        android:onClick="onClick_Prepod"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:shape="ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c_but_ref"
            android:id="@+id/button3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:textColor="@color/but_text_color"
            android:background="@drawable/krug_but" android:textSize="30sp"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/r_but_ref"
            android:id="@+id/button4"
            android:singleLine="true"
            android:textColor="@color/but_text_color"
            android:background="@drawable/krug_but"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:textSize="30sp"
            android:onClick="onClick_Refresh"/>

</RelativeLayout>
